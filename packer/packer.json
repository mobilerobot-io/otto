{
    "variables": {
	"do_token": "{{env `DO_TOKEN`}}"
    },

    "builders": [
	{
	    
	    "type": "virtualbox-ovf",
	    "source_path": "source.ovf",
	    "ssh_username": "packer",
	    "ssh_passwd": "packer",

	    /* this shutdown command in important sync filesystem */
	    "shutdown_command": "echo 'packer' | sudo -S shutdown -P now"
	},
	{
	    "type": "digitalocean",
	    "api_token": "DO_TOKEN",

	    "droplet_name": "otto-packer"
	    "private_networking": true,
	    "monitoring": true,
	    "snapshot_name": "ub18-packer-{{timestamp}}"

	    "image": "ubuntu-18-04-x64",
	    "region": "sf02",
	    "size": "512mb",
	    "ssh_username": "root"
	}
    ]
}
